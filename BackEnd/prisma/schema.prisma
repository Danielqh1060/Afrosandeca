// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums: Restringen los valores permitidos a nivel de base de datos
enum Role {
  USER
  MODERATOR
  ADMIN
  SUPERADMIN
}

model User {
  id            String    @id @default(uuid()) // UUID es estándar pro
  email         String    @unique
  password      String    // Hash encriptado, NUNCA texto plano
  fullName      String
  role          Role      @default(USER)
  isActive      Boolean   @default(true)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users") // Buen hábito: nombres de tablas en minúsculas y plural
}