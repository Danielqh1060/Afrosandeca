// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums: Restringen los valores permitidos a nivel de base de datos
enum Role {
  USER
  MODERATOR
  ADMIN
  SUPERADMIN
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  fullName      String
  role          Role      @default(USER)
  isActive      Boolean   @default(true)
  
  // Relaciones
  posts         Post[]
  comments Comment[]
  reactions Reaction[]
  commentReactions CommentReaction[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

model Section {
  id          Int       @id @default(autoincrement())
  name        String    @unique // Ej: "Noticias", "Cultura"
  slug        String    @unique // Ej: "noticias", "cultura" (para la URL)
  description String?
  isActive    Boolean   @default(true)
  
  // Relaciones
  posts       Post[]    // Relación Many-to-Many implícita con Posts

  @@map("sections")
}

model Post {
  id          String    @id @default(uuid())
  title       String
  content     String    @db.Text
  published   Boolean   @default(true)
  authorId    String
  author      User      @relation(fields: [authorId], references: [id])
  sections    Section[]
  
  attachments Media[]   
  comments Comment[]
  reactions Reaction[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("posts")
}

model Media {
  id        String   @id @default(uuid())
  url       String   // La URL que te devuelve MinIO
  type      String   // 'IMAGE' o 'VIDEO'
  
  post      Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String?  // Puede ser nulo inicialmente, pero se vinculará al Post

  createdAt DateTime @default(now())

  @@map("media")
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String

  parentId  String?  // Puede ser nulo (si es comentario raíz)
  parent    Comment? @relation("CommentChildren", fields: [parentId], references: [id])
  children  Comment[] @relation("CommentChildren")

  reactions CommentReaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("comments")
}

model Reaction {
  id        String   @id @default(uuid())
  type      String   @default("LIKE") // Por si luego quieres "ME ENTRISTECE"
  
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String

  createdAt DateTime @default(now())

  // REGLA DE ORO: Un usuario solo puede reaccionar una vez por post
  @@unique([userId, postId]) 
  @@map("reactions")
}

model CommentReaction {
  id        String   @id @default(uuid())
  type      String   @default("LIKE")
  
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  commentId String

  @@unique([userId, commentId]) // Un like por comentario
}