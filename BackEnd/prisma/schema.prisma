// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums: Restringen los valores permitidos a nivel de base de datos
enum Role {
  USER
  MODERATOR
  ADMIN
  SUPERADMIN
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  fullName      String
  role          Role      @default(USER)
  isActive      Boolean   @default(true)
  
  // Relaciones
  posts         Post[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

model Section {
  id          Int       @id @default(autoincrement())
  name        String    @unique // Ej: "Noticias", "Cultura"
  slug        String    @unique // Ej: "noticias", "cultura" (para la URL)
  description String?
  isActive    Boolean   @default(true)
  
  // Relaciones
  posts       Post[]    // Relación Many-to-Many implícita con Posts

  @@map("sections")
}

model Post {
  id          String    @id @default(uuid())
  title       String
  content     String    @db.Text // Texto largo
  published   Boolean   @default(true)
  
  // Relaciones
  author      User      @relation(fields: [authorId], references: [id])
  authorId    String
  
  sections    Section[] // Un post puede estar en varias secciones
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("posts")
}